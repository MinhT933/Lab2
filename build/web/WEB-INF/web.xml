<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>minht.filter.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>minht.controler.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>minht.controler.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertServlet</servlet-name>
        <servlet-class>minht.controler.InsertServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadInsertServlet</servlet-name>
        <servlet-class>minht.controler.LoadInsertServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>minht.controler.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadUserServlet</servlet-name>
        <servlet-class>minht.controler.LoadUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewListPromtionServlet</servlet-name>
        <servlet-class>minht.controler.ViewListPromtionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadUpdatePageServlet</servlet-name>
        <servlet-class>minht.controler.LoadUpdatePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>minht.controler.UpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteActorServlet</servlet-name>
        <servlet-class>minht.controler.DeleteActorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPromotionServlet</servlet-name>
        <servlet-class>minht.controler.AddPromotionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmAddPromotionServlet</servlet-name>
        <servlet-class>minht.controler.ConfirmAddPromotionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertServlet</servlet-name>
        <url-pattern>/InsertServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadInsertServlet</servlet-name>
        <url-pattern>/LoadInsertServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewListPromtionServlet</servlet-name>
        <url-pattern>/ViewListPromtionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadUserServlet</servlet-name>
        <url-pattern>/LoadUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadUpdatePageServlet</servlet-name>
        <url-pattern>/LoadUpdatePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteActorServlet</servlet-name>
        <url-pattern>/DeleteActorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPromotionServlet</servlet-name>
        <url-pattern>/AddPromotionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmAddPromotionServlet</servlet-name>
        <url-pattern>/ConfirmAddPromotionServlet</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>minht.listener.MyContextServletListener</listener-class>
    </listener>
    <resource-ref>
        <res-ref-name>DBconnect</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
